{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"composite": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"isolatedModules": true,
		"resolveJsonModule": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["**/*.ts", "**/*.js", "**/*.json"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts"
	]
}
